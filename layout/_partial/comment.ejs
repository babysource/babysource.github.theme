<% if (page.comments) { %>
<section id="comment">
  <h1 class="title"><%= __('comment') %></h1>
  <% if (theme.comment_provider == "disqus") { %>
    <div id="disqus_thread">
      <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  <% } else if(theme.comment_provider == "duoshuo") { %>
    <div id="duoshuo_thread">
      <noscript>Please enable JavaScript to view the <a href="//duoshuo.com/?ref_noscript">comments powered by Duoshuo.</a></noscript>
    </div>
  <% } else if(theme.comment_provider == "facebook") { %>
    <% if (theme.comment_facebook) { %>
      <%- partial('_partial/facebook_comment', {fbConfig: theme.comment_facebook}) %>
    <% } %>
  <% } %>
</section>
<% } %>